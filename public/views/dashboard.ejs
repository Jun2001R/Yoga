<body>
    <div class="container">
        <h2>Dashboard</h2>
        <div class="dashboard">
          <div class="datas">
            <p>Name: <span class="name identity"> <%=name%> </span></p>
            <p>Date Of Birth: <span class="dob identity"> <%=dateOfBirth%> </span></p>
            <p>Gender: <span class="gender identity"> <%=gender%> </span></p>
            <p>Email Id:<span class="email identity"><%=emailId%></span> </p>
            <p>Phone No: <span class="ph identity"> <%=phoneNo%> </span></p>
            <p>Address: <span class="add identity"> <%=address%> </span></p>
        </div>
      </div>
        <h2>Payment Status: <span class="status" style="color: red;"> <%=paymentStatus%> </span></h2>
        <div class="paymentstatus">
          <form action="./payment" method="post">
            <div class="EmailId">
              <!-- <input type="email" class="form-control" id="inputEmail" name="email" autocomplete="off"
                placeholder="Email Id" required> -->
            </div>
            <button type="submit">PayNow</button><span>&nbsp; (Rs. 500 only for one month)</span>
          </form>

        </div>
        <div class="paymentstatus1">
          Payment Till: 
          <p><%=lastPaymentDate%></p>
        </div>
        <h2>Batch Selected: <span class="batch" style="color: blue;"> <%=batchSelected%> </span></h2>
    </div>
    <!-- <div class="random">
      <%=r%>
    </div> -->
    <footer>
        <div class="print">
         <button class="printbtn" onclick="window.print()">Print</button>
        </div>
        <div class="logout">
          <button class="printbtn" onclick="window.location.reload()">Log Out</button>
        </div>
    </footer>
    <script>
      if ( window.history.replaceState ) {
        window.history.replaceState( null, null, window.location.href );
      }
      </script>
    <script> 
const paybtn = document.querySelector(".paymentstatus");
const paybtn1 = document.querySelector(".paymentstatus1");
const status = document.querySelector(".status");

if(status.innerText == "Paid")
{
  status.style.color = "green";
  paybtn.style.display = "none";
  paybtn1.style.display = "block"
}
else{
  if(status.innerText == "unPaid")
  {
    paybtn1.style.display = "none";
  let email = document.querySelector(".email");
  let EmailId = document.querySelector(".EmailId");
  EmailId.innerHTML = `<input type="hidden" id="custId" name="emails" value="${email.innerText}">`
// EmailId.innerHTML = ``
  }
}


    </script>
